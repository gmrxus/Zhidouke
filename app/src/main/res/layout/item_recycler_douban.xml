<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/tv_item_douban_column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shap_tv_douban_title"
        android:text="聊艺术"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_item_douban_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_douban_column"
        android:layout_marginTop="16dp"
        android:text="生于西藏唐卡世家是种什么样的体验?"
        android:textColor="@color/black"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/tv_item_douban_title"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_item_douban_abstract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:ellipsize="end"
            android:lines="7"/>

        <ImageView
            android:id="@+id/iv_item_douban_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>
    </LinearLayout>


</RelativeLayout>